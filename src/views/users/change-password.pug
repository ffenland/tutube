extends ../base

block content
    form(method="post")
        if errorMessage
            span=errorMessage
        input(placeholder="Old Password" type="password" name="old" required)
        input(placeholder="New Password" type="password" name="new1" required)
        input(placeholder="Confirm New Password" type="password" name="new2" required)
        input(type='submit' value='Change Password')