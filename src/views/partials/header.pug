header
	a(href="/").header__logo
		i.fa-solid.fa-piggy-bank
		span.header__logo__title pigs(A)ty

	div.header__search
		form(method="GET" action="/search").header__search__form
			input(placeholder="Search by title" name="keyword" type="text")
			button
				i.fas.fa-search

	ul.header__menu 
		if loggedIn 
			li
				a(href="/videos/upload") Upload Video
			li
				a(href="/users/edit")
					if loggedInUser.avatarUrl === ""
						span #{loggedInUser.username[0]}
					else 
						if loggedInUser.socialOnly
							img.header__avatar(src=loggedInUser.avatarUrl)
						else
							img.header__avater(src="/" + loggedInUser.avatarUrl)
			li
				a(href="/users/logout")  Log Out
			
		else
			li
				a(href="/login")  Login                        
			li
				a(href="/signup").header__btn  SignUp
